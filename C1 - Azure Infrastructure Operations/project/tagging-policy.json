{
    "properties": {
        "mode": "All",
        "displayName": "Deny creation of resources that do not have tags",
        "policyType": "Custom",
        "policyRule": {
            "if": {
                "allOf": [
                {
                "field": "tags",
                "exists": "false"
                }
            ]},
            "then": {
                "effect": "deny"
            }
        },
        "parameters": {}
    }
}
